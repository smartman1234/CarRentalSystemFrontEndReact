import axios from "../axios";

class DriverDetailsService {
    postDriverDetails = async (data) => {
        const promise = new Promise((resolve, reject) => {
            axios.post('driverDetails', data)    // 20s
                .then((res) => {
                    return resolve(res)
                })
                .catch((err) => {
                    return resolve(err)
                })
        });

        return await promise;
    }

    fetchDriverDetails = async () => {
        const promise = new Promise((resolve, reject) => {
            axios.get('driverDetails')
                .then((res) => {
                    return resolve(res)
                })
                .catch((err) => {
                    return resolve(err)
                })
        })
        return await promise;
    }

    putDriverDetails = async (data) => {
        const promise = new Promise((resolve, reject) => {
            axios.put('driverDetails', data)
                .then((res) => {
                    return resolve(res)
                })
                .catch((err) => {
                    return resolve(err)
                })
        })
        return await promise;
    };

    deleteDriverDetails = async (params) => {
        const promise = new Promise((resolve, reject) => {
            axios.delete('driverDetails', {params: params})
                .then((res) => {
                    return resolve(res)
                })
                .catch((err) => {
                    return resolve(err)
                })
        })
        return await promise;
    };
}
export default new DriverDetailsService();